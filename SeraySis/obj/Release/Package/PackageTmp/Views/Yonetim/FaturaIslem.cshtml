
@{
    ViewBag.Title = "Fatura Islemleri";
    @model SeraySis.Entities.Rapor
}

@Html.Partial("_UstSayfa")


<div id="page-content">

    <div class="row">



        @using (Html.BeginForm("FaturaIslem", "Yonetim", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
        {
            <div class="col-lg-12">
                <div class="panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fatura Oluştur</h3>
                    </div>
                    <!--Input Size-->
                    <!--===================================================-->
                    <div class="panel-body">


                        @Html.ValidationSummary(false)

                        @if (ViewBag.SetLink != null)
                        {
                            <a href="#" class="message">@ViewBag.SetLink</a>
                        }
                        <div class="form-group">
                            <div id="demo-dp-component">
                                <label for="demo-is-inputnormal" class="col-sm-3 control-label">Fatura Tarih</label>
                                <div class="col-sm-6 input-group date">
                                    @Html.EditorFor(model => model.FaturaTarih, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Fatura Tarih" } })
                                    <span class="input-group-addon"><i class="demo-pli-calendar-4"></i></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Firma Adı</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.FirmaAdi, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Firma Adı" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Adres</label>
                            <div class="col-sm-6">

                                @Html.TextAreaFor(model => model.Adres, new { @class = "form-control", @id = "", @placeholder = "Adres" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Vergi Dairesi</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.VergiDairesi, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Vergi Dairesi" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Vergi No</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.VergiNo, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Vergi No" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Stok Kartı</label>
                            <div class="col-sm-6">

                                @Html.DropDownList("StokkartId", (IEnumerable<SelectListItem>)ViewBag.StokkartId, new { @class = "demo_select2 form-control" })
                            </div>
                        </div>

                        <div class="form-group has-feedback">
                            <label for="demo-is-inputnormal" class="col-sm-3 control-label">Miktar Litre</label>
                            <div class="col-sm-6">
                                @Html.EditorFor(model => model.MiktarLitre, new { htmlAttributes = new { @class = "form-control", @id = "", @data_bv_field = "numeric", @placeholder = "Miktar Litre", } })
                            </div>
                        </div>


                    </div>
                    <div class="panel-footer text-center">
                        <div class="row">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-success" type="submit">Kaydet</button>

                                <a href="/FaturaIslem" class="btn btn-danger">
                                    İptal
                                </a>

                            </div>
                        </div>
                    </div>
                    <!--===================================================-->
                    <!--End Input Size-->

                </div>
            </div>

        }

        <script>
            $('#demo-dp-component .input-group.date').datepicker({ autoclose: true });
        </script>

    </div>

    @Html.Action("FaturaListele", "Yonetim")

</div>

@Html.Partial("_AltSayfa")