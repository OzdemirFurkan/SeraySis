
@model IEnumerable<SeraySis.Entities.Rapor>



<!-- Add Row -->
<!--===================================================-->
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Stok Bilgileri</h3>
    </div>

    @*<div id="demo-custom-toolbar2" class="table-toolbar-left">
            <button id="demo-dt-addrow-btn" class="btn btn-primary"><i class="demo-pli-plus"></i> Add row</button>
        </div>*@

    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Fatura Kod</th>
                    <th>Firma Adı</th>
                    <th>Adres</th>
                    <th>Vergi Dairesi</th>
                    <th>Vergi No</th>
                    <th>Stok Kartı</th>
                    <th>Miktar Litre</th>
                    <th>KDV</th>
                    <th>Net Tutar</th>
                    <th>Toplam Tutar</th>
                    <th class="min-tablet">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FaturaKod</td>
                        <td>@item.FirmaAdi</td>
                        <td>@item.Adres</td>
                        <td>@item.VergiDairesi</td>
                        <td>@item.VergiNo</td>
                        <td>@item.StokKart.MalzemeTanim</td>
                        <td>@item.MiktarLitre </td>
                        <td>@item.KdvliTutar @item.StokKart.BirimPara</td>
                        <td>@item.NetTutar @item.StokKart.BirimPara</td>
                        <td>@item.ToplamTutar @item.StokKart.BirimPara</td>
                        <td>
                            <a href="/FaturaSil/@item.Id">
                                <button type="button" class="btn btn-xs btn-danger ti-close add-tooltip"></button>
                            </a>
                            <a href="/FaturaDetay/@item.Id">
                                <button type="button" class="btn btn-xs btn-mint ti-clipboard"></button>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--===================================================-->
<!-- End Add Row -->
