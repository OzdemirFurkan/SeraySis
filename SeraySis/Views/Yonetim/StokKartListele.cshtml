
@model IEnumerable<SeraySis.Entities.StokKart>



<!-- Add Row -->
<!--===================================================-->
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Stok Bilgileri</h3>
    </div>

    @*<div id="demo-custom-toolbar2" class="table-toolbar-left">
        <button id="demo-dt-addrow-btn" class="btn btn-primary"><i class="demo-pli-plus"></i> Add row</button>
    </div>*@

    <div class="panel-body">
        <table id="demo-dt-addrow" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Stok Kod</th>
                    <th>Malzeme Tanım</th>
                    <th>Kdv Oran</th>
                    <th>Birim Fiyat</th>
                    <th class="min-tablet">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Kod</td>
                    <td>@item.MalzemeTanim</td>
                    <td>%@item.KdvOran</td>
                    <td>@item.BirimFiyat @item.BirimPara</td>
                    <td>
                        <a href="/StokGuncelle/@item.Id">
                            <button class="btn btn-xs btn-default demo-psi-pen-5 add-tooltip"></button>
                        </a>
                        <a href="/StokSil/@item.Id">
                            <button type="button" class="btn btn-xs btn-danger ti-close add-tooltip"></button>
                        </a>
                    </td>    
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<!--===================================================-->
<!-- End Add Row -->
