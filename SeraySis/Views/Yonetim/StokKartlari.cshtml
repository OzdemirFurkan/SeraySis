
@{
    ViewBag.Title = "Stok Kartlari";
    @model SeraySis.Entities.StokKart
}

@Html.Partial("_UstSayfa")


<div id="page-content">
    


        <div class="panel">
            <div class="panel-heading">
                <h3 class="panel-title">Stok Ekle</h3>
            </div>
            <div class="panel-body">
                <div class="row">

                    @using (Html.BeginForm("StokKartlari", "Yonetim", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(false)


                        if (TempData["Fail"] != null)
                        {
                            <div class="validation-success">
                                <strong> @TempData["Fail"].ToString() </strong>
                                <br />
                                <p>Kayıt İşlemini Tamamlamak İçin Lütfen E-Posta Adresinize Gelen Onay Linkine Tıklayın...</p>
                            </div>
                        }

                        if (ViewBag.SetLink != null)
                        {
                            <a href="#" class="message">@ViewBag.SetLink</a>
                        }

                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.MalzemeTanim, new { htmlAttributes = new { @class = "form-control", @id = "" ,@placeholder = "Malzeme Tanim" } })
                        </div>
                        <div class="col-sm-3">
                            @Html.EditorFor(model => model.KdvOran, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Kdv Oran" } })
                        </div>
                        <div class="col-sm-2">
                            @Html.EditorFor(model => model.BirimFiyat, new { htmlAttributes = new { @class = "form-control", @id = "", @placeholder = "Birim Fiyat" } })
                        </div>
                        <div class="col-sm-2">
                        @Html.DropDownList("BirimPara",
                        new List<SelectListItem>{
                     new SelectListItem {
                        Text="₺ Turk Lirası",
                        Value="₺",
                        // Selected = true,
                        // Disabled = true
                     },
                     new SelectListItem {
                        Text="€ Euro",
                        Value="€",

                     },
                     new SelectListItem {
                        Text="$ Dolar",
                        Value="$",

                     },

                 }, "Para Birimi", new { @class = "form-control" })   

                        </div>
                        
                        <div class="col-sm-1">
                            <button type="submit" class="btn btn-success" name="dataekle">Ekle</button>
                        </div>
                    }

                </div>
            </div>
        </div>
        

        @Html.Action("StokKartListele", "Yonetim")



    
</div>


@Html.Partial("_AltSayfa")


